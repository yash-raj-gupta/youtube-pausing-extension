{
    "manifest_version": 3,
    "name": "Pause Video on Tab Change",
    "version": "1.0",
    "description": "Pauses video when the tab is not in focus and resumes when it is.",
    "permissions": ["activeTab", "scripting"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    }
  }
  